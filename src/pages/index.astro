---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Home'>
  <main class='mt-6 md:mt-0'></main>
  <style>
    a {
      text-decoration: underline;
      text-underline-offset: 3px;
      color: #8f8f8f;
    }
    a:hover {
      transition: 0.2s ease-in-out;
      filter: opacity(0.65);
    }

    .tag {
      width: fit-content;
      border-radius: 20px;
      border: 1px solid#191a1d;
      padding: 0.25rem 0.75rem;
      color: #999999;
      font-size: 0.7rem;
    }

    .blogSection a:hover {
      color: #936de6 !important;
      filter: opacity(1) !important;
    }
    .blogSection li {
      margin-bottom: 0.6em;
      display: flex;
      justify-content: space-between;
    }
    .blogSection li:hover {
      background-color: #261c3a !important;
      outline: 8px solid #261c3a;
      color: #936de6;
      border-radius: 2px;
    }
    .blogSection li:hover a {
      text-decoration-color: #936de6;
    }
    :root {
      color-scheme: dark;
    }
    main {
      width: 700px;
      max-width: calc(100% - 2rem);
    }
    div {
      animation: enter 0.6s both;
      animation-delay: calc(var(--stagger) * 100ms);
    }
    p {
      animation: enter 0.6s both;
      animation-delay: calc(var(--stagger) * 100ms);
      margin: 0;
    }
    h5,
    h4 {
      animation: enter 0.6s both;
      animation-delay: calc(var(--stagger) * 100ms);
    }
    @keyframes enter {
      0% {
        transform: translateY(25px);
        opacity: 0%;
      }
      100% {
        transform: translateY(0px);
        opacity: 100%;
      }
    }
  </style>
</Layout>
