---
import Otp from '../components/playground/Otp';
import Contenedor from '../components/playground/Contenedor';
import Layout from '../layouts/Layout.astro';
import Buttons from '../components/playground/Buttons.tsx';
import '../styles/global.css';
---

<Layout title='Playground'>
  <main>
    <section class='mt-0'>
      <Contenedor>
        <Otp length={6} client:load />
      </Contenedor>
      <Contenedor>
        <Buttons />
      </Contenedor>
    </section>
  </main>
</Layout>

<style>
  :root {
    color-scheme: dark;
  }
  main {
    margin: auto;
    width: 700px;
    max-width: calc(100% - 2rem);
  }

  .maxContent {
    width: 750px;
    max-width: calc(100% - 5rem);
  }
</style>
