---
const today = new Date();

const canciones = [
  {
    song: 'SONG 1',
    artist: 'Ragz Originale',
    img: '/spotify/song1.webp',
    link: 'https://example.com/song1',
  },
  {
    song: 'Gravy',
    artist: 'UKG',
    img: '/spotify/ukg.webp',
    link: 'https://example.com/song2',
  },
  {
    song: 'Crew (feat. Brent Faiyaz & Shy Glizzy)',
    artist: 'Goldlink',
    img: '/spotify/crew.webp',
    link: 'https://example.com/song3',
  },
];

const randomIndex = Math.floor(Math.random() * canciones.length);
const randomSong = canciones[randomIndex];
---

<footer
  class='mb-0 mt-12 flex items-center justify-between rounded-t-3xl border border-border-500 border-b-transparent bg-darkBackground-300 px-10 py-16'
>
  <div class='flex items-center gap-4'>
    <div class='spotifyVisualizer'>
      <div class='spotifyLine1'></div>
      <div class='spotifyLine2'></div>
      <div class='spotifyLine3'></div>
    </div>
    <div class='flex items-center gap-2'>
      <img src={randomSong.img} alt={randomSong.song} class='w-12' />
      <div class='flex flex-col items-start gap-0'>
        <p class='text-md m-0 text-text-100'>{randomSong.song}</p>
        <p class='m-0 text-sm text-text-300'>{randomSong.artist}</p>
      </div>
    </div>
  </div>

  <div class='social-links'>
    <a href='https://github.com/brenolasserre' target='_blank'
      ><svg
        xmlns='http://www.w3.org/2000/svg'
        width='16'
        height='16'
        fill='currentColor'
        class='bi bi-github text-text-100 transition hover:text-text-200'
      >
        <path
          d='M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8'
        ></path>
      </svg></a
    >
    <a href='https://twitter.com/brenolasserre' target='_blank'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        width='16'
        height='16'
        fill='currentColor'
        class='bi bi-twitter-x ease text-text-100 transition hover:text-text-200'
      >
        <path
          d='M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z'
        ></path>
      </svg>
    </a>
  </div>
</footer>
<style>
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
  }
  .spotifyVisualizer {
    height: 20px;
    position: relative;
    display: flex;
    align-items: center;
    font-size: 14px;
  }
  .spotifyVisualizer div {
    width: 3px;
    height: 3px;
    margin-right: 3px;
    background: #1dd05d;
    border-radius: 1.5px;
  }
  .spotifyLine1 {
    animation: visualizerAnimation 0.75s ease infinite;
  }
  .spotifyLine2 {
    animation: visualizerAnimation 1.25s ease infinite;
  }
  .spotifyLine3 {
    animation: visualizerAnimation 0.85s ease infinite;
  }
  @keyframes visualizerAnimation {
    0% {
      height: 3px;
    }
    50% {
      height: 12px;
    }
    to {
      height: 3px;
    }
  }
</style>
